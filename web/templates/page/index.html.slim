div ng-controller="ChatController"

  .container 
    .row
      .col-lg-3.conversaion-wrap
        .media.conversation
          .media-body
            h5.media-heading Timczur

      .col-lg-8.message-wrap
        .msg-wrap
          .media.msg
            .pull-left
              img class="media-object" alt="64x64" style="width: 32px; height: 32px;" src="data:image/png;base64,"
            .media-body
              small.pull-right.time
                i.fa.fa-clock-o
                | 11:11
              h5.media-heading Kejmon
              small.col-lg-10 
                | {{ msg }}

  .footer
    .container
      .col-sm-2 
        input.form-control value="@timczur" disabled="disabled"
      .col-sm-10
        input#message.form-control type="text" ng-model="msg"
